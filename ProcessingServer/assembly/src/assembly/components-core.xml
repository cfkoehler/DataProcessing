<component xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/component/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/component/1.1.2 http://maven.apache.org/xsd/component-1.1.2.xsd">
    <dependencySets>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>DpServer*</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>lib/compile</outputDirectory>
            <excludes>
                <exclude>DpServer*</exclude>
            </excludes>
            <scope>compile</scope>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <directory>${DpServer.parent.dir}/core/target</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>config/**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${DpServer.parent.dir}/core</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>DpServer</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${DpServer.parent.dir}</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>README.md</include>
            </includes>
        </fileSet>
    </fileSets>
</component>